# Convex – URL van je Convex deployment (van Convex Dashboard)
NEXT_PUBLIC_CONVEX_URL=https://xxxx.convex.cloud

# Convex – deploy key voor o.a. Vercel (Convex Dashboard → Settings → Deploy Key)
CONVEX_DEPLOY_KEY=prod:xxxxx

# NextAuth + Convex adapter (zelfde waarde in .env.local en Convex Dashboard → Environment Variables)
CONVEX_AUTH_ADAPTER_SECRET=

# Convex JWT: private key (alleen in .env.local; genereer met: node -e "const jose=require('jose');jose.generateKeyPair('RS256').then(k=>jose.exportPKCS8(k.privateKey).then(console.log))")
CONVEX_AUTH_PRIVATE_KEY=

# NextAuth – secret (bijv. openssl rand -base64 32)
AUTH_SECRET=

# NextAuth – op Vercel: exact je live URL (bijv. https://jouw-project.vercel.app)
NEXTAUTH_URL=

# Google OAuth (van Google Cloud Console)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Admin – wachtwoord om in te loggen op /admin
ADMIN_PASSWORD=123

# Claude / Anthropic – API key voor de chatbot (van console.anthropic.com)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
